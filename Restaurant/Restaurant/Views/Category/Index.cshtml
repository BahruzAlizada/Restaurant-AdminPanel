@model List<Category>
<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>Kateqoriyalar</h2>
        <div>
           @* <a asp-action="Create" class="btn btn-success text-white" style="margin-right:10px">
                <i class="fa-sharp fa-solid fa-plus"></i>
            </a>*@
            <!-- Vertically Centered Modal -->
            <div class="col-lg-4 col-md-6">
                <div class="mt-3">
                    <!-- Button trigger modal -->
                    <button style="background-color:green; border:1px solid green;" type="button"
                            class="btn btn-primary"
                            data-bs-toggle="modal"
                            data-bs-target="#modalCenter">
                        <i class="fa-sharp fa-solid fa-plus"></i>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalCenterTitle">Kateqoriya Yarat</h5>
                                    <button type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form method="post" id="createForm">
                                        <div class="row g-2">
                                            <div class="col mb-0">
                                                <label class="form-label">Adı</label>
                                                <input id="nameInput" name="name" class="form-control" />
                                                <span>@ViewBag.Message</span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                        Bağla
                                    </button>
                                    <a id="createButton"  class="btn btn-success text-white">Yarat</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Vertically Centered Modal -->
        </div>
       
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Status</th>

                        <th style="text-align:right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                @if (item.IsDeactive)
                                {
                                    <span style="background-color:red;color:white;padding:6px 4px;">Deaktivdir</span>
                                }
                                else
                                {
                                    <span style="background-color:green;color:white;padding:6px 4px;">Aktivdir</span>
                                }
                            </td>
                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info text-white" style="margin-right:10px"><i class="fa-solid fa-pen"></i></a>
                                    @if (item.IsDeactive)
                                    {
                                        <a id="deactive" asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success text-white" style="margin-right:10px;width:117px;">Aktiv Et</a>
                                    }
                                    else
                                    {
                                        <a id="deactive" asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger text-white" style="margin-right:10px;width:117px;">Deaktiv Et</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="pagnation my-2">
                    <ul style="list-style:none;display:flex;justify-content:center;">
                        <li class="page-item prev">
                            <a class="page-link" asp-route-page="page">
                                <i class="tf-icon bx bx-chevrons-left"></i>
                            </a>
                        </li>
                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            <li class="page-item  @(i == ViewBag.CurrentPage ? "active" : "")"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }
                        <li class="page-item next">
                            <a class="page-link" asp-route-page="@ViewBag.PageCount">
                                <i class="tf-icon bx bx-chevrons-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#createButton').click(function () {
                var name = $('#nameInput').val();

                // Verileri AJAX isteği için bir nesne olarak hazırla
                var data = {
                    name: name
                };

                // AJAX isteği yap
                $.ajax({
                    url: '/Category/Index/', // Controller yönteminin URL'si
                    type: 'POST',
                    data: data,
                    success: function (response) {
                      console.log("Ok");
                        $('#modalCenter').modal('hide');   
                    },
                    error: function (xhr, status, error) {
                        $('#nameInput').after('<span class="text-danger" asp-validation-summary="Name">' + @ViewBag.Message + '</span>');
                        // İstek sırasında hata oluştuğunda yapılacak işlemler
                        console.log('Hata oluştu: ' + error);
                    }
                });
            });
        });
    </script>
}