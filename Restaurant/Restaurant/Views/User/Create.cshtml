@model CreateVM

<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Yarat</h5>
            </div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post">

                 
                        <div class="col mb-0">
                            <label asp-for="FullName" class="form-label">Ad və Soyad</label>
                            <input asp-for="FullName" class="form-control" />
                            <span class="text-danger" asp-validation-for="FullName"></span>
                        </div>

                        <div class="col mb-0">
                            <label asp-for="UserName" class="form-label">İstifadəçi adı</label>
                            <input asp-for="UserName" class="form-control" />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                 
                        <div class="mb-3 form-group">
                            <label asp-for="Email" class="form-label"> Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="PhoneNumber" class="form-label"> Telefon</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Password" class="form-label"> Şifrə</label>
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="CheckPassword" class="form-label">Şifrənin təkrarı</label>
                        <input asp-for="CheckPassword" class="form-control" />
                        <span class="text-danger" asp-validation-for="CheckPassword"></span>
                    </div>

                    <div class="form-group">
                        <label>Rol seç</label>
                        <select class="form-control" name="role">
                            @foreach (string role in ViewBag.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary my-3">Yarat</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}