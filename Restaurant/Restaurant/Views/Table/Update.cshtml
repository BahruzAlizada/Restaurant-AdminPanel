@model Table

<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Masa</h5>
            </div>
            <div class="card-body">
                <form method="post">

                    <div class="mb-3 form-group">
                        <label asp-for="Name" class="form-label">Masa Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="ForTwoPerson" class="form-label">2 nəfər üçün Masa</label>
                        <input asp-for="ForTwoPerson" type="radio" value="false" />

                        <input asp-for="ForTwoPerson" type="radio" value="true" />
                        <label asp-for="Name" class="form-label">4 nəfər üçün Masa</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Dəyiş</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}