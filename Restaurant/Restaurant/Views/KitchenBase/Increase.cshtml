@{
    Layout = "_AdmistratorLayout";
}

@model KitchenBase

<div class="row">
    <div class="col-8 justify-content-center">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"> Əlavə Et</h5>
            </div>
            <div class="card-body">
                <form method="post">   

                    <div class="mb-3 form-group">
                        <label class="form-label">Çəki,ölçü,miqdar və s.</label>
                        <input type="number" name="quantity" class="form-control" />
                    </div>

                    <div class="mb-3 form-group">
                        <label class="form-label">Qiymət</label>
                        <input name="price" type="number" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Yarat</button>
                    <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section ScriptAdmistrator{
    <partial name="_ValidationScriptsPartial" />
}


